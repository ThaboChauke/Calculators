#:kivy 2.3.0
<Root>

    calculator_field: calculator_field

    orientation: 'vertical'
    TextInput:
        id: calculator_field
        text: "0"
        readonly: True
        disabled: True
        font_size: 30
        size_hint: (1, 0.3)

    GridLayout:
        rows: 5
        columns: 4
        padding: 7
        spacing: 7
        size_hint: (1,0.5)

# top row
        Button:
            text: "C"
            font_size: 26
            on_press: root.clear()
            background_color: (0.3, 0.3, 0.3, 1)  

        Button:
            text: "+/-"
            font_size: 26
            on_press: root.postive_negative()
            background_color: (0.3, 0.3, 0.3, 1)  

        Button:
            text: "/"
            font_size: 26
            on_press: root.cal_symbol('/')
            background_color: (0.3, 0.3, 0.3, 1)  

        Button:
            text: "<-"
            font_size: 26
            on_press: root.erase()
            background_color: (0.3, 0.3, 0.3, 1)  

# 4th row from bottom
        Button:
            text: "1"
            font_size: 26
            on_press: root.cal_symbol('1')
            background_color: (1, 1, 1, 1) 
        Button:
            text: "2"
            font_size: 26
            on_press: root.cal_symbol('2')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "3"
            font_size: 26
            on_press: root.cal_symbol('3')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "-"
            font_size: 26
            on_press: root.cal_symbol('-')
            background_color: (0.3, 0.3, 0.3, 1)  
     
# 3rd row from the bottom
        Button:
            text: "4"
            font_size: 26
            on_press: root.cal_symbol('4')
            background_color: (1, 1, 1, 1)    

        Button:
            text: "5"
            font_size: 26
            on_press: root.cal_symbol('5')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "6"
            font_size: 26
            on_press: root.cal_symbol('6')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "x"
            font_size: 26
            on_press: root.cal_symbol('*')
            background_color: (0.3, 0.3, 0.3, 1)  

# 2nd row from the bottom
        Button:
            text: "7"
            font_size: 26
            on_press: root.cal_symbol('7')
            background_color: (1, 1, 1, 1)  

        Button:
            text: "8"
            font_size: 26
            on_press: root.cal_symbol('8')
            background_color: (1, 1, 1, 1)  

        Button:
            text: "9"
            font_size: 26
            on_press: root.cal_symbol('9')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "+"
            font_size: 26
            on_press: root.cal_symbol('+')
            background_color: (0.3, 0.3, 0.3, 1)      

# 1st row from the bottom
        Button:
            text: "."
            font_size: 26
            on_press: root.cal_symbol('.')
            background_color: (1, 1, 1, 1) 
            
        Button:
            text: "0"
            font_size: 26
            on_press: root.cal_symbol('0')
            background_color: (1, 1, 1, 1) 

        Button:
            text: "()"
            font_size: 26
            on_press: root.brackets()
            background_color: (1, 1, 1, 1) 

        Button:
            text: "="
            font_size: 26
            on_press: root.get_results()
            background_color: (0.3, 0.3, 0.3, 1)        
